<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:CustomControls="clr-namespace:AWHKConfigApp"
      xmlns:HotKeyControls="clr-namespace:HotKeyCustomControlLibrary;assembly=HotKeyCustomControlLibrary"
      xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="AWHKConfigApp.MoveKeysPage"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="512"
      x:Name="moveKeysPage"
	  Title="MoveKeysPage" Loaded="Page_Loaded">
    <Page.Resources>
        <Style x:Key="SeparatorMargin" TargetType="{x:Type FrameworkElement}">
            <Setter Property="Margin" Value="0,0,0,7"/>
        </Style>
    </Page.Resources>
    <!--
    Legend for key names:
        &#x21D1; = Shift Key
        Ctrl = Control Key
        Alt = Alt Key
        &#xE154; = Windows Key
    
    Combo box settings:
        IsReadOnly="True" 
        HorizontalContentAlignment="Center" 
        VerticalContentAlignment="Center" 
        FontSize="24" 
        FontFamily="Segoe UI Symbol"
    -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ComboBox Grid.Row="1" Width="150" Text="Foo" SelectedIndex="0" IsReadOnly="True" FontSize="24" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Segoe UI Symbol" VerticalAlignment="Center">
            <ComboBoxItem Content="&#x21D1;"/>
            <ComboBoxItem Content="Ctrl"/>
            <ComboBoxItem Content="Alt"/>
            <ComboBoxItem Content="&#xE154; + &#x21D1;"/>
            <ComboBoxItem Content="&#xE154; + Ctrl"/>
            <ComboBoxItem Content="&#xE154; + Alt"/>
        </ComboBox>
        <TextBlock Grid.Column="1" Grid.Row="1" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Segoe UI Symbol" Text="+" Margin="15,0" />
        <Grid Grid.Column="2" Grid.Row="1" Height="100">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <HotKeyControls:HotKeyBox Grid.Column="1" Grid.Row="0" FontSize="24" FontFamily="Segoe UI Symbol" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Trigger="W" DisableAlt="True" DisableControl="True" DisableShift="True" DisableWindows="True"/>
            <!--<TextBlock Grid.Column="1" Grid.Row="0" Text="W" FontSize="24" FontFamily="Segoe UI Symbol" HorizontalAlignment="Center" VerticalAlignment="Center"/>-->
            <TextBlock Grid.Column="0" Grid.Row="1" Text="A" FontSize="24" FontFamily="Segoe UI Symbol" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock Grid.Column="2" Grid.Row="1" Text="D" FontSize="24" FontFamily="Segoe UI Symbol" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock Grid.Column="1" Grid.Row="2" Text="S" FontSize="24" FontFamily="Segoe UI Symbol" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Page>
