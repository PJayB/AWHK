<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:HotKeyCustomControlLibrary">
    <Style TargetType="{x:Type local:HotKeyBox}">
        <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"/>
        <Setter Property="Trigger" Value="{x:Null}"/>
        <Setter Property="HasShift" Value="{x:Null}"/>
        <Setter Property="HasControl" Value="{x:Null}"/>
        <Setter Property="HasAlt" Value="{x:Null}"/>
        <Setter Property="HasSystem" Value="{x:Null}"/>
        <Setter Property="AllowShift" Value="True"/>
        <Setter Property="AllowControl" Value="True"/>
        <Setter Property="AllowAlt" Value="True"/>
        <Setter Property="AllowSystem" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:HotKeyBox}">
                    <TextBox x:Name="txtDisplayBox"  AutoWordSelection="True"
                             Grid.Column="1"
                             IsReadOnly="True" IsReadOnlyCaretVisible="True"
                             Margin="0,1,0,1" VerticalAlignment="Center"
                             Text=""/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
